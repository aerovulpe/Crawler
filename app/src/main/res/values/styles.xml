<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/crawlerPrimaryColor</item>
        <item name="colorPrimaryDark">@color/crawlerSecondaryColor</item>
        <item name="colorAccent">@color/crawlerBackgroundAccent</item>
        <item name="android:windowBackground">@color/crawlerBackgroundColor</item>
    </style>

    <style name="Theme.Crawler" parent="Theme.Base"/>

    <style name="ActionBarThemeOverlay">
        <item name="colorControlHighlight">@color/crawlerHighlightColor</item>
        <item name="android:textColorPrimary">@color/crawlerPrimaryTextColor</item>
        <item name="android:actionMenuTextColor">@color/crawlerPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/crawlerPrimaryTextColor</item>
        <item name="android:background">@color/crawlerPrimaryColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/crawlerPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/md_grey_200</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="account_name" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/md_grey_200</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="account_id" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/md_grey_200</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="account_dialog_label" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent"/>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title"/>

</resources>
